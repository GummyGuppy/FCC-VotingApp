<%# views/dashboard.ejs %>

<% extend('layout') %>

<!-- declare variables outside of loop -->
<script>let data, labels</script>





<% for(var i = 0; i < polls.length; i++) { %>
<canvas id='<%=i%>' width="300" height="300"></canvas>

<script>

splitMe = function (string) {
  return string.split(',')
}

data = splitMe('<%= polls[i].data %>')
labels = splitMe('<%= polls[i].labels %>')

var ctx = document.getElementById('<%=i%>')
new Chart(ctx, {
    type: 'bar',
    data: {
        labels: labels,
        datasets: [{
            label: 'Poll',
            data: data,
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                'rgba(255, 159, 64, 0.2)'
            ],
            borderColor: [
                'rgba(255,99,132,1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)'
            ],
            borderWidth: 1
        }]
    },
    options: {
        scales: {
            yAxes: [{
                ticks: {
                    beginAtZero:true
                }
            }]
        }
    }
});

</script>

<% } %>
